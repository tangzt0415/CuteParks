<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="4dp"
    app:layout_anchorGravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="4dp">


        <TextView
            android:id="@+id/favouriteItemParkNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:gravity="center_vertical"
            android:text="Park Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/favouriteItemShareButton"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="13dp"
            android:layout_toLeftOf="@id/favouriteItemRemoveButton"
            android:background="#FFFFFF"
            android:contentDescription="@string/share"
            android:paddingRight="5dp"
            app:srcCompat="?attr/actionModeShareDrawable" />

        <ImageButton
            android:id="@+id/favouriteItemRemoveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="14dp"
            android:layout_toLeftOf="@+id/favouriteItemReviewButton"
            android:background="#FFFFFF"
            android:contentDescription="@string/share"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/ic_favorite_filled_24dp" />

        <ImageButton
            android:id="@+id/favouriteItemReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="14dp"
            android:background="#FFFFFF"
            android:contentDescription="@string/share"
            app:srcCompat="@drawable/ic_rate_review_black_24dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>